<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnightLight_v4_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF313131">
        <Button Content="Click Me" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Click="Button_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="148,43,0,0" VerticalAlignment="Top" Width="185">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding ItemImage,Mode=TwoWay}" Width="20" Height="20"/>
                        <TextBlock Text="{Binding Name}" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            
        </ComboBox>
        <Label Content="Select A User" HorizontalAlignment="Left" Margin="54,41,0,0" VerticalAlignment="Top" Foreground="#FFE4E4E4"/>
        <Label Content="Selected User" HorizontalAlignment="Left" Margin="54,88,0,0" VerticalAlignment="Top" Foreground="#FFE4E4E4" RenderTransformOrigin="0.541,2.368"/>

    </Grid>
</Window>
